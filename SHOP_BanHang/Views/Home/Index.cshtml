@model SHOP_BanHang.Models.HomeModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <!-- ========================= SECTION MAIN  ========================= -->
    <section class="section-main padding-y">
        <main class="card">
            <div class="card-body">

                <div class="row">
                    <aside class="col-lg col-md-3 flex-lg-grow-0">
                        <h6>Menu</h6>
                        <nav class="nav-home-aside">
                            <ul class="menu-category">
                                <li><a class="dropdown-item" href="~/Category/SmartPhone">Điện thoại</a></li>
                                <li><a class="dropdown-item" href="~/Category/Screen">Màn hình</a> </li>
                                <li><a class="dropdown-item" href="~/Category/Laptop">Laptop</a></li>
                                <li> <a class="dropdown-item" href="~/Category/All_Items">Tất cả sản phẩm</a></li>
                            </ul>
                        </nav>
                    </aside>
                    <div class="col-md-9 col-xl-7 col-lg-7">

                        <!-- ================== COMPONENT SLIDER  BOOTSTRAP  ==================  -->
                        <div style="width: 100%" id="carousel1_indicator" class="slider-home-banner carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carousel1_indicator" data-slide-to="0" class="active"></li>
                                <li data-target="#carousel1_indicator" data-slide-to="1"></li>
                                <li data-target="#carousel1_indicator" data-slide-to="2"></li>
                            </ol>
                            <div style="cursor: pointer" class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="~/Theme/images/banners/slide1.jpg" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Theme/images/banners/slide2.jpg" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Theme/images/banners/slide3.jpg" alt="Third slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carousel1_indicator" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carousel1_indicator" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                        <!-- ==================  COMPONENT SLIDER BOOTSTRAP end.// ==================  .// -->

                    </div> <!-- col.// -->
                    <div class="col-md d-none d-lg-block flex-grow-1">
                        <aside class="special-home-right">
                            <h6 class="bg-blue text-center text-white mb-0 p-2">Sản phẩm phổ biến</h6>
                            @foreach (var item in Model.ListProduct.Take(3))
                            {
                                <div class="card-banner border-bottom">
                                    <div class="py-3" style="width:80%">
                                        <h6 class="card-title">@item.Name</h6>
                                        <a href="#" class="btn btn-secondary btn-sm"> Chi tiết sản phẩm </a>
                                    </div>
                                    <img src="@item.Images" height="80" class="img-bg">
                                </div>
                            }
                        </aside>
                    </div> <!-- col.// -->
                </div> <!-- row.// -->

            </div> <!-- card-body.// -->
        </main> <!-- card.// -->

    </section>
    <!-- ========================= SECTION MAIN END// ========================= -->
    <!-- =============== SECTION GIẢM GIÁ =============== -->
    <section class="padding-bottom">
        <div class="card card-deal">
            <div class="col-heading content-body">
                <header class="section-heading">
                    <h3 class="section-title">Giảm giá -20%</h3>

                </header><!-- sect-heading -->
                <div class="timer">
                    <div> <span class="num">04</span> <small>Ngày</small></div>
                    <div> <span class="num">12</span> <small>Giờ</small></div>
                    <div> <span class="num">58</span> <small>Phút</small></div>
                    <div> <span class="num">02</span> <small>Giây</small></div>
                </div>
            </div> <!-- col.// -->
            <div class="row no-gutters items-wrap">
                @foreach (var item in Model.ListDiscountProduct)
                {
                    <div class="col-md col-6">
                        <figure class="card-product-grid card-sm">
                            <a href="@Url.Action("Details", "Product")" class="img-wrap">
                                <img src="@item.Images">
                            </a>

                            <div class="text-wrap p-3">
                                @*<a href="" class="title">@item.Name</a>*@
                                @Html.ActionLink(item.Name, "Details", "Product") <br />
                                <span class="badge badge-danger"> -20% </span> <br />

                                <span style="text-decoration: line-through" class="badge badge-danger"> @item.Price VNĐ </span>
                                <span class="badge badge-danger"> @item.PriceDiscout VNĐ </span>
                            </div>
                        </figure>
                    </div><!-- col.// -->
                }


            </div>
        </div>

    </section>
